    "react-dom": "^19.1.0",
    "@tailwindcss/vite": "^4.1.4",
    "tailwindcss": "^4.0.9"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@wxt-dev/module-react": "^1.1.3",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  }
}
